{
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
      "outDir": "dist",
      "charset": "utf8",
      "module": "commonjs",
      "target": "es2018",
      "lib": [
          "es2018",
          "dom"
      ],
      "noImplicitAny": true,
      "removeComments": true,
      "strictNullChecks": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "noImplicitReturns": true,
      "declaration": true
  },
  "include": [
    "src/**/*"
  ],  
  "typeRoots": [
      "node_modules/@types"
  ]
}